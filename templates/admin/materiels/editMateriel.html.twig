{% extends 'adminBase.html.twig'%} {% block body %}
<div class="container-fluid bandeau bg-success text-dark">
    <div class="container">
        <h3 class="text-dark"><i class="fa fa-wheelchair" aria-hidden="true"></i> Modification mat√©riel</h3>
    </div>
</div>
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success text-dark">
        <h2>Materiel, {{materiel.serialNumber}}</h2>
    </div>
    <div class="card-body bg-secondary">
        <div class="container">
            <h5 class="card-title text-center">Modifier le materiel, {{materiel.serialNumber}}</h5>
            <div class="card-text">
                {{ form_start(form)}}
                <div class="form-group">
                    {{form_row(form.category, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.serialNumber, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.reference, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.description, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.status, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Modifier</button>
                </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
</div>

{% endblock %}