{% extends 'adminBase.html.twig' %} {% block body %}
<div class="container-fluid bandeau bg-danger text-dark">
    <div class="container">
        <div class="row">
            <a href="{{path('admin_materiel')}}" class="btn btn-danger text-dark"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Retour sur les matériaux
            </a>
            <h3 class="col-md-6 d-flex justify-content-md-start"> <i class="fa fa-globe" aria-hidden="true"></i> Materiel {{materiel.serialNumber}}</h3>
        </div>
    </div>
</div>
<div class="container">
    <div class="row  my-4">
        {% for message in app.flashes('success') %}
        <div class="col-md-12 alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button> {{message}}
        </div>
        {% endfor %}
    </div>
    <div class="row mt-4">
        <div class="card col-md-12 mb-3 m-auto">
            <div class="row no-gutters">
                {#
                <div class="col-md-4 d-flex">
                    {% if pret.materiel.category.name == 'Lit médicalisé' %}
