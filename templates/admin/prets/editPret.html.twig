{% extends 'adminBase.html.twig'%} {% block body %}
<div class="container-fluid bandeau bg-danger text-dark">
    <div class="container">
        <h3 class="text-dark"><i class="fa fa-globe" aria-hidden="true"></i> Modification des dates du pret</h3>
    </div>
</div>
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-danger text-dark">
        <h2>Pret, {{pret.id}}</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row  my-4">
                {% for message in app.flashes('warning') %}
                <div class="col-md-12 alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button> {{message}}
                </div>
                {% endfor %}
            </div>
            <div class="card-text">
                <form method="post">
                    {{ form_start(form)}}
                    <div class="row">
                        {% if form_errors(form.dateDebut) %}
                        <div class="form-error">
                            <span class="badge badge-danger">Erreur</span>
                            <small> {{form_errors(form.dateDebut) }} </small>
                        </div>
                        {% endif %}
                        <div class="form-group col-md-6">
                            <label for="">Date de d√©but du pret</label> {{form_widget(form.dateDebut, {'attr' : {'min' : today }})}}
                        </div>
                        {% if form_errors(form.dateFin) %}
                        <div class="form-error">
                            <span class="badge badge-danger">Erreur</span>
                            <small> {{form_errors(form.dateFin) }} </small>
                        </div>
                        {% endif %}
                        <div class="form-group col-md-6">
                            <label for="">Date de fin du pret</label> {{form_widget(form.dateFin, {'attr' : {'min' : today }})}}
                        </div>
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <button type="submit" class="btn btn-danger mt-4 text-dark">Enregistrer les changements</button> {{form_end(form)}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}