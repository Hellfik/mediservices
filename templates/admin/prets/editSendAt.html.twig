{% extends 'adminBase.html.twig'%} {% block body %}
<div class="container-fluid bandeau bg-danger text-dark">
    <div class="container">
        <div class="row">
            <a href="{{path('admin_show_one_pret', {'id' : pret.id})}}" class="btn btn-danger text-dark"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Retour sur les prêts
            </a>
            <h3 class="col-md-6 d-flex justify-content-md-start"> <i class="fa fa-globe" aria-hidden="true"></i> Mise à jour de la date d'envoie</h3>

        </div>
    </div>
</div>
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-danger text-dark">
        <h2>Pret, {{pret.id}}</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row  my-4">
                {% for message in app.flashes('danger') %}
                <div class="col-md-12 alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button> {{message}}
                </div>
                {% endfor %}
            </div>
            <div class="card-text">
                <form method="post">
                    {{ form_start(form)}}
                    <div class="row">
                        <div class="form-group col">
                            <label for="">Date d'expedition</label> {{form_widget(form.sentAt, {'attr' : {'min' : dateMin, 'max' : dateMax }})}}
                        </div>
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <button type="submit" class="btn btn-danger mt-4 text-dark">Enregistrer la date d'envoie</button>
                    </div>
                    {{form_end(form)}}
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}