{% extends 'adminBase.html.twig' %} {% block body %}
<div class="container-fluid bandeau bg-warning text-dark">
    <div class="container">
        <h3><i class="fa fa-user" aria-hidden="true"></i> Ajouter un utilisateur</h3>
    </div>
</div>
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-warning text-dark">
        <h2>Ajouter un utilisateur </h2>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="card-text">
                {{ form_start(form)}} {% if form_errors(form.username) %}
                <div class="form-error text-center">
                    <span class="badge badge-danger">Erreur</span>
                    <small style="color:red;">{{form_errors(form.username) }}</small>
                </div>
                {% endif %}
                <div class="form-group">
                    <label for="user_username">Nom d'utilisateur</label> {{form_widget(form.username, {'attr': {'placeholder' : 'Nom utilisateur', 'autofocus': 'autofocus','class' : 'form-control'}})}}
                </div>
                {% if form_errors(form.email) %}
                <div class="form-error text-center">
                    <span class="badge badge-danger">Erreur</span>
                    <small style="color:red;">{{form_errors(form.email) }}</small>
                </div>
                {% endif %}
                <div class="form-group">
                    <label for="user_email">Adresse mail</label> {{form_widget(form.email, {'attr': {'placeholder' : 'Adresse Mail','class' : 'form-control'}})}}
                </div>
                {% if form_errors(form.password) %}
                <div class="form-error">
                    <span class="badge badge-danger">Erreur</span>
                    <small> {{form_errors(form.password) }} </small>
                </div>
                {% endif %}
                <div class="form-group">
                    <label for="user_password">Mot de passe</label> {{form_widget(form.password, {'attr': {'placeholder' : 'Mot de passe','class' : 'form-control'}})}}
                </div>
                {% if form_errors(form.confirm_password) %}
                <div class="form-error">
                    <span class="badge badge-danger">Erreur</span>
                    <small> {{form_errors(form.confirm_password) }} </small>
                </div>
                {% endif %}
                <div class="form-group">
                    <label for="user_confirm_password">Confirmer le mot de passe</label> {{form_widget(form.confirm_password, {'attr': {'placeholder' : 'Mot de passe','class' : 'form-control'}})}}
                </div>
                <div class="checkbox">
                    <label for="user_roles">Roles</label> {{form_widget(form.roles)}}
                </div>
                <button type="submit" class="btn btn-warning mt-4">Ajouter</button> {{form_end(form)}}
            </div>
        </div>
    </div>
</div>


{% endblock %}